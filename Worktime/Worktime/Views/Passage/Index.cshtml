@model IEnumerable<Worktime.ViewModel.PassageVM>

@{
    ViewData["Title"] = "Passage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" href="~/css/col-exp-panel.css" />
}


<h4>Passage</h4>
@await Html.PartialAsync("../Shared/_ResearchDates")
<div class="my-tbcontainer">
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>
                    LOG TIME
                </th>
                <th>
                    POINTEUSE
                </th>
                <th>
                    NOM
                </th>
                <th>
                    PRENOM
                </th>
                <th>
                    CAFAT
                </th>
            </tr>
        </thead>
        <tbody style="background:#ced4da">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            string formattedDate = item.LogTime.ToString("dd/MM - HH:mm");
                            @formattedDate
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PointerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SSN)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pager-container">
    @await Html.PartialAsync("../Shared/_Pager", new PagerViewModel
    {
        CurrentPage = ViewBag.Page,
        PageSize = 20, // Set your desired page size
        TotalItems = ViewBag.TotalItems
    })
</div>
@section Scripts {
    <script src="~/js/col-exp-panel.js"></script>
}

<style>
    .out {
        background: #00ff00 !important
    }

    .in {
        background: #FF8B02 !important
    }

    .normal {
        background: #FFFFFF !important
        width: 50%;
    }

    .absense {
        width: 50%;
        background: red !important !important
        color: white;
    }
</style>