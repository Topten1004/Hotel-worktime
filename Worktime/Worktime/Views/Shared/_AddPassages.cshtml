@using System.Security.Claims

<button type="button" class="rechcollapsible">Add Passage</button>
<div class="rechcontent">
    <form method="post" asp-action="AddPassage" asp-controller="MajPassage">
        <div class="form-row">
            <div class="col-3">
                <label class="control-label my-2">Select Date</label>
                <input id="majBeginDate" name="majBeginDate" class="form-control" value="@ViewBag.majBeginDate.Date.ToString("yyyy-MM-dd")" type="date"/>
            </div>
            <div class="col-3">
                <label class="control-label my-2">Select Employee</label>
                @Html.DropDownList("SSN", new SelectList(ViewBag.EmployeeList, "Id", "Name"), "Select Employee", new { @class = "form-control", required = "required", id = "SelectEmployee" })
            </div>
            <div class="col-2">
                <label class="control-label my-2">Time</label>
                <input type="text" id="timePickerInput" name="Time" class="form-control timepicker" />
            </div>

            <div class="col p-2 text-center">
                <input id="btnRechercher" type="submit" value="ENREGISTRER" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Include Select2 library after jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <script>
        jQuery(document).ready(function ($) {
            if (typeof $.fn.select2 === 'undefined') {
                console.error('Select2 library is not loaded.');
            } else {
                $("#SelectEmployee").select2();
            }
        });
    </script>
}