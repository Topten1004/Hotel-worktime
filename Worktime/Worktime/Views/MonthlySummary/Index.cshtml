@model Worktime.ViewModel.PassageReportVM
@using Microsoft.AspNetCore.Mvc.Rendering
@using Worktime.Global;

@{
    ViewData["Title"] = "LISTE PASSAGES MOIS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" href="~/css/col-exp-panel.css" />
}

<h4>Présence mensuelle</h4>
@await Html.PartialAsync("../Shared/_ResearchEmployee")


<div class="card-body">
    <div class="table-responsive">
        <table class="table text-nowrap">
            <thead class="table-primary">
                <tr>
                    <th>
                        EMPLOYEE
                    </th>
                    <th>
                        DURATION
                    </th>
                    <th>
                        ABSENCE/JOUR
                    </th>
                </tr>
            </thead>
            <tbody style="background:#ced4da">
                @foreach (var summary in Model.Summaries)
                {
                    <tr>
                        <td class="@(summary.IsAbsense ? "absense" : "normal")">
                            @Html.DisplayFor(modelItem => summary.EmployeeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => summary.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => summary.Absense)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>
    .out {
        background: #00ff00
    }

    .in {
        background: #FF8B02
    }

    .normal {
        background: #ced4da;
        width: 50%;
    }

    .absense {
        width: 50% !important;
        background: red !important;
        color: white !important;
    }
</style>

@section Scripts {
    <script src="~/js/col-exp-panel.js"></script>
}